    "@typescript-eslint/parser": "^6.0.0",
    "concurrently": "^6.1.0",
    "eslint": "^8.0.1",
    "eslint-plugin-github": "^4.8.0",
    "eslint-plugin-jest": "^27.2.3",
    "flow-bin": "^0.115.0",
    "jest": "^27.2.5",
    "lerna": "^7.1.4",
    "prettier": "^3.0.0",
    "ts-jest": "^27.0.5",
    "typescript": "^4.3.0"
  },
  "dependencies": {
    "@actions/core": "^1.10.0",
